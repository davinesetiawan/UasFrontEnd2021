@page "/mhsedit/{id}"

<EditForm Model="@Mahasiswa" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header">
            <h1>Edit</h1>
            <h3>Student</h3>
        </div>
    </div>

    <div class="form-group row">
        <label for="nim" class="col-sm-2 col-form-label">Nim</label>
        <div class="col-sm-10">
            <InputText id="studentID" class="form-control" placeholder="Nim" @bind-Value="Mahasiswa.studentID" />
            <ValidationMessage For="@(()=>Mahasiswa.studentID)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="namaDepan" class="col-sm-2 col-form-label">Nama Depan</label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="Nama Depan" @bind-Value="Mahasiswa.firstName" />
            <ValidationMessage For="@(()=>Mahasiswa.firstName)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="namaBelakang" class="col-sm-2 col-form-label">Nama Belakang</label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Nama Belakang" @bind-Value="Mahasiswa.lastName" />
            <ValidationMessage For="@(()=>Mahasiswa.lastName)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="tglMasuk" class="col-sm-2 col-form-label">Tanggal Masuk</label>
        <div class="col-sm-10">
            <InputDate id="enrollmentDate" class="form-control" placeholder="Tanggal Masuk" @bind-Value="Mahasiswa.enrollmentDate" />
            @* <ValidationMessage For="@(()=>Mahasiswa.enrollmentDate)" /> *@
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a href="mhspage" type="submit" class="btn btn-info">Kembali</a>
</EditForm>